@{
}

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit Comment - Admin Functionality</h1>
    </div>
</div>


<div class="container py-5">

    @if (Model != null)
    {
        <form method="post">

            <div class="mb-3">
                <label class="form-label">Id</label>
                <input type="text" id="id" class="form-control" asp-for="Id" readonly />
            </div>

            <div class="mb-3">
                <label class="form-label">Description</label>
                <input type="text" id="description" class="form-control" asp-for="Description" />
            </div>

            <div class="mb-3">
                <label class="form-label">Article Id</label>
                <input type="text" id="articleId" class="form-control" asp-for="ArticleId" readonly />
            </div>


            <div class="mb-3">
                <label class="form-label">User Id</label>
                <input type="text" id="userId" class="form-control" asp-for="UserId" readonly />
            </div>


            <div class="mb-3">
                <label class="form-label">Date Added</label>
                <input type="date" id="dateAdded" class="form-control" asp-for="DateAdded" readonly />
            </div>

            <div class="mb-3">

                <div class="d-flex">
                    <button type="submit" class="btn btn-dark">Update</button>
                    <button class="btn btn-danger ms-2" type="submit" asp-area="" asp-controller="Comments" asp-action="Delete">Delete</button>
                </div>

            </div>

        </form>
    }
    else
    {
        <p>Comment not found!</p>
    }

</div>