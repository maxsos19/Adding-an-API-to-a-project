@model List<Blog.Models.Domain.ArticlesComment>


@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}


<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Show all comments - Admin Functionality</h1>
    </div>
</div>


<div class="container mt-3">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>
                        Description
                    </th>
                    <th>
                        ArticleId
                    </th>
                    <th>
                        UserId
                    </th>
                    <th>
                        DateAdded
                    </th>
                    <th> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var comment in Model)
                {
                    <tr>
                        <td>@comment.Id</td>
                        <td>@comment.Description</td>
                        <td>@comment.ArticleId</td>
                        <td>@comment.UserId</td>
                        <td>@comment.DateAdded</td>
                        <td>

                            <a asp-area="" asp-controller="Comments" asp-action="Edit" asp-route-id="@comment.Id">Edit</a>
                           @*  <form method="post" asp-controller="Comments" asp-action="Delete" asp-route-id="@comment.Id">
                                <button class="btn btn-danger" type="submit">Delete</button>
                            </form> *@
                        </td>
                    </tr>
                }
            </tbody>

        </table>

    }
    else
    {
        <p>No comments found!</p>
    }
</div>